<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_gravity="center"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="2dp"
    app:cardElevation="0dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/lightgrey"
        android:padding="15dp">

        <TextView
            android:id="@+id/labelItemText"
            android:layout_width="wrap_content"
            android:text="Titre annonce"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:textAppearance="?attr/textAppearanceHeadline6"/>

        <TextView
            android:id="@+id/dates"
            android:layout_marginTop="5dp"
            android:layout_below="@+id/labelItemText"
            android:layout_width="wrap_content"
            android:text="26 avril 2020 - 30 avril 2020"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/rentalPrice"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/labelItemText"
            android:layout_width="wrap_content"
            android:text="70â‚¬"
            android:layout_marginTop="5dp"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/renter"
            android:layout_marginTop="5dp"
            android:layout_below="@+id/dates"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <Button
            android:layout_marginTop="10dp"
            android:id="@+id/giveMark"
            android:layout_below="@+id/renter"
            android:layout_alignParentEnd="true"
            android:layout_width="wrap_content"
            android:text="Noter"
            android:layout_height="wrap_content"/>

    </RelativeLayout>


</com.google.android.material.card.MaterialCardView>