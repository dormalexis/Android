<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_marginBottom="10dp">


<TextView
    android:id="@+id/itemDetailsRenterIdentity"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp"
    android:textAppearance="?attr/textAppearanceBody2"
    android:text="Alexis Dormal"
    android:textColor="@color/red"/>

<RatingBar
    android:id="@+id/itemsDetailsRenterRating"
    android:layout_toEndOf="@id/itemDetailsRenterIdentity"
    android:layout_marginStart="20dp"
    style="@style/ratingBar"
    android:layout_width="78dp"
    android:layout_height="15dp"
    android:layout_marginTop="10dp" />

<TextView
    android:id="@+id/itemDetailsComment"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_below="@+id/itemsDetailsRenterRating"
    android:layout_marginTop="8dp"
    android:textStyle="italic"
    android:textAppearance="?attr/textAppearanceBody2"
    android:textColor="?android:attr/textColorSecondary" />


</RelativeLayout>