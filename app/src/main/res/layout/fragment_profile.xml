<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/anthracite"
        android:titleTextColor="@color/white"
        android:title="@string/account"
        android:elevation="5dp">
    </Toolbar>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="50dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="15dp"
            android:layout_marginStart="15dp"
            android:layout_marginBottom="5dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/profile"
                android:layout_margin="8dp"
                android:textAppearance="?attr/textAppearanceHeadline6"/>


            <com.google.android.material.card.MaterialCardView
                android:id="@+id/profileInfos"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                style="@style/accountNavigation">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/profilsInfos"
                    android:textAppearance="?attr/textAppearanceBody1"
                    android:padding="10dp"
                    />

                <ImageView
                    android:layout_marginEnd="10dp"
                    android:layout_gravity="right|center"
                    android:src="@drawable/arrow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"></ImageView>

            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/myReviews"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                style="@style/accountNavigation">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/myEvaluations"
                    android:textAppearance="?attr/textAppearanceBody1"
                    android:padding="10dp"
                    />

                <ImageView
                    android:layout_marginEnd="10dp"
                    android:layout_gravity="right|center"
                    android:src="@drawable/arrow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"></ImageView>

            </com.google.android.material.card.MaterialCardView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/owner"
                android:layout_margin="8dp"
                android:textAppearance="?attr/textAppearanceHeadline6"/>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/rentalsOwner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                style="@style/accountNavigation">

                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/rentalsOwner"
                    android:textAppearance="?attr/textAppearanceBody1"
                    android:padding="10dp"
                    />

                <ImageView
                    android:layout_marginEnd="10dp"
                    android:layout_gravity="right|center"
                    android:src="@drawable/arrow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"></ImageView>

            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/addItem"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                style="@style/accountNavigation">

                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/addItem"
                    android:textAppearance="?attr/textAppearanceBody1"
                    android:padding="10dp"
                    />

                <ImageView
                    android:layout_marginEnd="10dp"
                    android:layout_gravity="right|center"
                    android:src="@drawable/arrow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"></ImageView>

            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/ownerFollowing"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                style="@style/accountNavigation">

                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/followingItems"
                    android:textAppearance="?attr/textAppearanceBody1"
                    android:padding="10dp"
                    />

                <ImageView
                    android:layout_marginEnd="10dp"
                    android:layout_gravity="right|center"
                    android:src="@drawable/arrow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"></ImageView>

            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/ownerHistoric"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                style="@style/accountNavigation">

                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/historic"
                    android:textAppearance="?attr/textAppearanceBody1"
                    android:padding="10dp"
                    />

                <ImageView
                    android:layout_marginEnd="10dp"
                    android:layout_gravity="right|center"
                    android:src="@drawable/arrow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"></ImageView>

            </com.google.android.material.card.MaterialCardView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/renter"
                android:layout_margin="8dp"
                android:textAppearance="?attr/textAppearanceHeadline6"/>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/rentalsRenter"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                style="@style/accountNavigation">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/followingItems"
                    android:textAppearance="?attr/textAppearanceBody1"
                    android:padding="10dp"
                    />

                <ImageView
                    android:layout_marginEnd="10dp"
                    android:layout_gravity="right|center"
                    android:src="@drawable/arrow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"></ImageView>

            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/rentalsRenterHistoric"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                style="@style/accountNavigation">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/historic"
                    android:textAppearance="?attr/textAppearanceBody1"
                    android:padding="10dp"
                    />

                <ImageView
                    android:layout_marginEnd="10dp"
                    android:layout_gravity="right|center"
                    android:src="@drawable/arrow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"></ImageView>

            </com.google.android.material.card.MaterialCardView>

            <Button
                android:background="@color/green"
                style="@style/button"
                android:id="@+id/logoutButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/logout"
                android:textColor="@color/white"
                android:textAlignment="center"
                android:layout_marginHorizontal="10dp"
                android:layout_marginVertical="20dp"
                />

        </LinearLayout>
    </ScrollView>
</LinearLayout>
