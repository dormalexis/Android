<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".View.Fragment.ItemDetailsFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/titleItemDetailsText"
            android:layout_width="326dp"
            android:layout_height="105dp"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toTopOf="parent"
            tools:layout_editor_absoluteX="43dp" />

        <ImageView
            android:id="@+id/detailsItemImage"
            android:layout_width="216dp"
            android:layout_height="189dp"
            android:layout_marginTop="20dp"
            android:src="@android:color/background_dark"
            app:layout_constraintTop_toBottomOf="@+id/titleItemDetailsText"
            tools:layout_editor_absoluteX="97dp" />

        <TextView
            android:id="@+id/descriptionItemText"
            android:layout_width="299dp"
            android:layout_height="152dp"
            tools:layout_editor_absoluteX="56dp"
            tools:layout_editor_absoluteY="376dp" />

        <Button
            android:id="@+id/BookItemButton"
            android:layout_width="206dp"
            android:layout_height="84dp"
            android:layout_marginTop="64dp"
            android:text="Button"
            app:layout_constraintTop_toBottomOf="@+id/descriptionItemText"
            tools:layout_editor_absoluteX="102dp" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>