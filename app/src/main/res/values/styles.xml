<resources>

    <style name="LocableTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:textViewStyle">@style/TextViewStyle</item>
        <item name="android:spinnerStyle">@style/spinner</item>
        <item name="ratingBarStyle">@style/ratingBar</item>
        <item name="android:button">@style/button</item>

        <item name="colorPrimary">@color/red</item>
        <item name="colorSecondary">@color/white</item>
        <item name="android:colorBackground">@color/lightgrey</item>
        <item name="colorError">@color/red</item>

    </style>

    <style name="bottomNavigation" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="itemTextColor">@color/anthracite</item>
    </style>

    <style name="button" parent="Widget.MaterialComponents.Button">
        <item name="android:gravity">center_vertical|center_horizontal</item>
        <item name="android:textColor">#FFFFFFFF</item>
        <item name="android:shadowColor">#FF000000</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">-1</item>
        <item name="android:shadowRadius">0.2</item>
        <item name="android:textSize">16dip</item>
        <item name="android:textStyle">bold</item>
        <item name="android:colorBackground">@color/blue</item>
    </style>

    <style name="spinner" parent="@android:style/Widget.Spinner">
        <item name="android:gravity">center_vertical|center_horizontal</item>
        <item name="android:paddingLeft">0dp</item>
        <item name="android:dropDownWidth">wrap_content</item>
        <item name="android:showDividers">none</item>
        <item name="android:dividerHeight">0dp</item>
        <item name="android:scrollbarAlwaysDrawVerticalTrack">true</item>
        <item name="android:dropDownSelector">@color/blue</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">#FFFFFFFF</item>
    </style>

    <style name="ratingBar" parent="android:style/Widget.Material.RatingBar.Small">
        <item name="android:progressTint">@color/yellow</item>
    </style>

    <style name="TextViewStyle" parent="android:Widget.TextView">
        <item name="android:textColor">@color/anthracite</item>
    </style>





</resources>
